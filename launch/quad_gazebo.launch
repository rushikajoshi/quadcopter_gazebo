<launch>
	
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find quadcopter)/worlds/quad.world" />
		<arg name="paused" default="false" />
		<arg name="use_sim_time" default="true" />
		<arg name="gui" default="true" />
		<arg name="headless" default="false" />
		<arg name="debug" default="false" />
	</include>
	
	<group ns="quad">
		
		<param name="robot_description" command="$(find xacro)xacro '$(find quadcopter)/urdf/quad.xacro'" />
		
		<node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-param robot_description -urdf -model quad" />
		
		<rosparam file="$(find quadcopter)/config/quad_control.yaml" command="load" ns="/quad" />
		
		<!--<node name="control_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="namespace=/Kwad
		/Kwad/joint_state_controller
		/Kwad/joint_fr_motor_controller
		/Kwad/joint_fl_motor_controller
		/Kwad/joint_bl_motor_controller
		/Kwad/joint_br_motor_controller" />-->
		
		<node name="control_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="--namespace=/quad joint_state_controller joint_motor_controller" />
		
		<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
			<!--<remap from="/joint_states" to="/Kwad/joint_states" />-->		
			<param name="publish_frequency" type="double" value="5.0" />
		</node>
	</group>
	
		
</launch>
